<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:padding="5dip" >

    <LinearLayout
        android:id="@+id/bt_client_list_of_devices_list_header_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:text="Bluetooth devices (long press to select)" />

        <ProgressBar
            android:id="@+id/bt_client_list_of_devices_list_progressbar_id"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible" />
    </LinearLayout>

    <ListView
        android:id="@+id/bt_client_list_of_devices_list_listview_id"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/bt_client_list_of_devices_list_botton_textview_id"
        android:layout_below="@id/bt_client_list_of_devices_list_header_id"
        android:layout_marginBottom="5dip"
        android:layout_marginTop="5dip" />

    <TextView
        android:id="@id/bt_client_list_of_devices_list_botton_textview_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Make sure intended device is discoverable" />

</RelativeLayout>